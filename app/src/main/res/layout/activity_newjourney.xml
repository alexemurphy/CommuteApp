<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/enter_journey_origin"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/journeyName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType=""
        android:labelFor="@+id/journeyName"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_journey_destination"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/destinationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType=""
        android:labelFor="@+id/journeyName"
        android:padding="10dp"
        tools:labelFor="@id/destinationName" />

</LinearLayout>