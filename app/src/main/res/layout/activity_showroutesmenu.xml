<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/LoadRoutes"
            android:layout_width="273dp"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Route Display"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <Spinner
            android:id="@+id/routeDropdownLoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="113dp" />

        <Button
            android:id="@+id/loadRouteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/routeDropdownLoad"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:text="Load Route" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/loadRouteButton"
            android:layout_marginStart="26dp"
            android:text="Make this GUI actually do something"
            android:textSize="24sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>